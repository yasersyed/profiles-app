extends layout
block content 
    div.text-center
        form(class="form-signin" method="POST" action="/users/newuser")
            #error
                if error 
                p.text-danger Error!!!
            h1 Register here!
            
            label(for="username") Username:
            input(type ="text" name="username" id="username" class="form-control" required autofocus)

            label(for="password") Password: 
            input(type ="password" name="password" id="password" class="form-control" required)
            -var btnClasses = ['btn']
            button(class=btnClasses type="submit") Register!
            
